@using Server.Management

@{ int id = 0; }

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">

        <div class="item active">
            <img src="~/Images/Screenshoot0.png">
            <div class="carousel-caption">
                <h3>Green Access</h3>
                <p></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/Screenshoot1.png">
            <div class="carousel-caption">
                <h3>Resident Profile</h3>
                <p></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/Screenshoot2.png">
            <div class="carousel-caption">
                <h3>Fire Alarm &amp; Log</h3>
                <p></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/Screenshoot3.png">
            <div class="carousel-caption">
                <h3>Fire Alarm &amp; Log</h3>
                <p></p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />
<br />
<div class="panel panel-default">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Clinet</th>
                <th scope="col">IP</th>
                <th scope="col">Transport</th>
                <th scope="col">Expire</th>
                <th scope="col">Connection</th>
            </tr>
        </thead>
        <tbody>
            @foreach (GAClient client in ViewBag.Client)
            {
                id++;
                <tr>
                    <th scope="row">@id</th>
                    <td>@client.ClientType</td>
                    <td>@client.Host</td>
                    <td>@client.SingleRTransport</td>
                    <td>@client.ExpireTime</td>
                    @{
                        string connection = "Bad";
                        if (client.ConnectCount <= 2)
                        {
                            connection = "Excellent";
                        }
                        else if (client.ConnectCount <= 10)
                        {
                            connection = "Good";
                        }
                    }
                    <td>@connection</td>
                </tr>
                        }
        </tbody>
    </table>
</div>